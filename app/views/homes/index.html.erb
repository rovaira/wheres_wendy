<div class="fullWidth">
  <div id="home-main-image">
    <div class="inner row">
      <!-- text -->
      <div class="home-text-search">
        <h1>Where's Wendy?</h1>
        <h2>Find Wellesley alums near you.</h2>
        <!-- search -->
        <div class="home-search">
          <% if !user_signed_in? %>
            <%= link_to 'Check In', new_user_session_path, class: "button radius small", "data-reveal-id" => "sign-in-modal" %>
          <% else %>
            <div class="inner">
              <%= link_to 'Check In', "/current_locations", class: "button radius small" %>
            </div>
          <% end %>
        </div>
      </div>

      <div id="viewport" class="owl-carousel">
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/02greenhall.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/03greendoor.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/04courtyard.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/05foundersfront.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/06lamp.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/07severencelawn.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/08foundersrear.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/09recycle.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/10ivy.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/11lamplowangle.jpg"></div>
        <div class="item"><img src="https://s3.amazonaws.com/wheres-wendy-production/static/01archway.jpg"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :extra_footer do %>
<script type="text/javascript">
  $(document).ready(function(){
    $('.owl-carousel').owlCarousel({
    loop:true,
    slideSpeed:300,
    autoplay:8000,
    autoplayHoverPause:false,
    items:1
    });
  });
</script>
<% end %>
