<h1> Say hello! </h1>

<ul class="user-profile">
  <li><%= @user.first_name %> <%= @user.last_name %></li>
  <% if @user.blurb.present? %>
    <li>"<%= @user.blurb %>"</li>
  <% end %>
  <li>Class of <%= @user.class_year %></li>
  <li>Last Check In: <%= @current_location[0].address %></li>
</ul>

<%= form_tag pings_path, method: :post, id: "ping-form" do %>
<%= f.hidden_field_tag(:sender_id), value: current_user.id %>
<%= f.hidden_field_tag(:receiver_id), value: params[:id] %>
<%= submit_tag "Ping Me!", class: "button" %>
<% end %>


<%= link_to 'Ping Me!', pings_path(sender_id: current_user.id, receiver_id: params[:id]), method: :post, class: "button radius small" %>
