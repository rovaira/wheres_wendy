<div id="sign-in-form">
  <h3>Have An Account?</h3>
  <br>
  <%= form_for(@user || User.new, as: :user, url: session_path(:user)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "wendy@wellesley.edu" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign In", class: "secondary button tiny" %>
    </div>
  <% end %>
  <h3>New to Where's Wendy?</h3>
  <%= link_to 'Sign Up', new_user_registration_path, "data-reveal-id" => "registration-modal" %>
</div>
